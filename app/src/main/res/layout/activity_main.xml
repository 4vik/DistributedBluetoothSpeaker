<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.nicolas.bluetoothspeeker.MainActivity">

    <Button
        android:text="Join a Party"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttoncorner"
        android:id="@+id/button2"
        android:drawableLeft="@drawable/phone"
        android:paddingStart="30sp"
        android:paddingLeft="30sp"
        android:drawablePadding="-50sp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:textSize="23sp"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Create a Party"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:textSize="23sp"
        android:drawableLeft="@drawable/home"
        android:background="@drawable/buttoncorner"
        android:paddingStart="30sp"
        android:paddingLeft="30sp"
        android:drawablePadding="-30sp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:layout_marginBottom="21dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Bluetooth Speaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fe5b35"
        android:id="@+id/textView"
        android:textStyle="bold|italic"
        android:textSize="50sp"
        android:typeface="serif"
        android:gravity="center_horizontal"
        android:layout_marginTop="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
