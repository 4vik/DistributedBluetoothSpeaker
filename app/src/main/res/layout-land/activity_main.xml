<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20sp"
    android:background="@drawable/background">

    <View android:id="@+id/fakeView"
        android:layout_width="20dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"/>


    <Button
        android:text="Create a Party"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:textSize="23sp"
        android:drawableLeft="@drawable/home"
        android:background="@drawable/buttoncorner"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/fakeView"
        android:layout_toStartOf="@+id/fakeView"
        android:paddingStart="20sp"
        android:paddingLeft="20sp"
        android:drawablePadding="-10sp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"/>

    <Button
        android:text="Join a Party"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttoncorner"
        android:id="@+id/button2"
        android:drawableLeft="@drawable/phone"
        android:paddingStart="20sp"
        android:paddingLeft="20sp"
        android:drawablePadding="-20sp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:textSize="23sp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/fakeView"
        android:layout_toEndOf="@+id/fakeView"/>

    <TextView
        android:text="Bluetooth Speaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="#fe5b35"
        android:textStyle="bold|italic"
        android:textSize="40sp"
        android:typeface="serif"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />

</RelativeLayout>